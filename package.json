    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.12.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.10.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "react-router-dom": "^7.1.0",
    "react-toastify": "^11.0.2",
    "twilio": "^5.5.0"
